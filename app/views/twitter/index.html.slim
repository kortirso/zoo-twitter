= render 'layouts/menu'
#inside
	.container
		.row
			.col-xs-4.col-md-3
				.col-xs-12.well
					h3= link_to current_user.username, account_path(current_user.username)
					p= link_to "@#{current_user.username}", account_path(current_user.username)
				.col-xs-12.well.visible-xs.visible-sm
					p Служебный блок
			.col-xs-8.col-md-6.well
				p Лента твитов
				- @tweets.each do |tweet|
					p= tweet.text
				- if @tweets.length == 0
					p Твитов пока нет
			.col-xs-4.col-md-3.well.visible-md.visible-lg
				p Служебный блок
